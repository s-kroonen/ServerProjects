@rendermode InteractiveServer
@inject BeerTap.Services.UserService UserService

<button @onclick="ToggleDebugPanel"
        style="position: fixed; top: 10px; right: 10px; z-index: 9999; background-color: #444; color: white; border: none; padding: 0.5rem 1rem; border-radius: 6px; cursor: pointer;">
    @(showDebugPanel ? "Hide Debug" : "Show Debug")
</button>

@if (showDebugPanel)
{
    <div style="position: fixed; top: 50px; right: 10px; z-index: 9998; background: #222; color: white; padding: 1rem; font-size: small; border-radius: 8px;">
        <div><strong>Debug Panel</strong></div>
        <div>User ID: @UserService._user?.UserId</div>
        <div>Score: @UserService._user?.Score</div>
    </div>
}

@code {
    private bool showDebugPanel;

    private void ToggleDebugPanel()
    {
        showDebugPanel = !showDebugPanel;
    }
}
